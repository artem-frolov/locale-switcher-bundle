<ul class="nav navbar-nav pull-right locale-switcher">
    {% for code, names in locales %}
        <li>
            <p class="navbar-text">
            {% if app.request.locale != code %}
                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': code})) }}" title="{{ names.currentLocale }}">
                    {{ names.nativeLocale }}
                </a>
            {% else %}
                <strong>{{ names.nativeLocale }}</strong>
            {% endif %}
            </p>
        </li>
    {% endfor %}
</ul>